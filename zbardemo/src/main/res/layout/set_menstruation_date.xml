<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <cn.bingoogolapple.qrcode.view.WFYTitle
		style="@style/wfy_title"
		app:centerText="设置大姨妈"
        app:leftImage="@drawable/back"
        app:leftIsBack="true"/>

    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"
        android:layout_marginTop="16dp"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/white">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最近一次月经"
            android:textSize="14sp"
            android:textColor="@color/black_gray_text"/>
        
        <EditText 
            android:id="@+id/et_last_menstruation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingLeft="12dp"
            android:textSize="14sp"
            android:hint="哪天来的？"
            android:editable="false"
            android:textColor="@color/theme_color"/>
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/line_color"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/white">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="经期天数"
            android:textSize="14sp"
            android:textColor="@color/black_gray_text"/>
        
        <EditText 
            android:id="@+id/et_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingLeft="12dp"
            android:textSize="14sp"
            android:numeric="integer"
            android:hint="来大姨妈的实际天数"
            android:textColor="@color/theme_color"/>
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/line_color"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/white">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周期天数"
            android:textSize="14sp"
            android:textColor="@color/black_gray_text"/>
        
        <EditText 
            android:id="@+id/et_cycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingLeft="12dp"
            android:textSize="14sp"
            android:numeric="integer"
            android:hint="两次月经第一天的间隔天数"
            android:textColor="@color/theme_color"/>
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"/>
    
    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selector"
        android:clickable="true"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingBottom="9dp"
        android:paddingTop="9dp"
        android:text="完成"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:typeface="monospace" />
    
</LinearLayout>
